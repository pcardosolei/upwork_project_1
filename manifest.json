{
  "manifest_version": 2,

  "name": "Chrome Extension - Ben McMillan",
  "description": "Chrome Extension",
  "version": "1.0.0.0",
  "homepage_url": "https://google.com/",

  "browser_action": {
    "default_popup": "popups/popup.html"
  },

  "permissions": [
    "identity",
    "alarms",
    "storage",
    "idle",
    "notifications",
    "contextMenus"
  ],

  "background": {
    "scripts": ["vendor/js/res.js","vendor/js/client.min.js","vendor/js/jquery-3.2.1.min.js","js/Statistics.js","js/Screen.js","js/KeyboardRecords.js","js/MouseRecords.js","background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
    "matches": ["<all_urls>"],
    "js": ["vendor/js/md5.min.js","vendor/js/jquery-3.2.1.min.js","script.js"]
    }
  ],

  "externally_connectable": {
    "matches": [
      "*://*.performetric.net/*"
    ]
  }
}
